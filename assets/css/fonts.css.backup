/* Inter Font Family */
@font-face {
    font-family: 'Inter';
    src: url('../fonts/inter-300.woff2') format('woff2'),
        url('../fonts/inter-300.ttf') format('truetype');
    font-weight: 300;
    font-style: normal;
    font-display: swap;
}

